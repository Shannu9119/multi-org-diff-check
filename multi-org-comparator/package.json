{
  "name": "multi-org-comparator",
  "displayName": "Multi-Org Compare",
  "description": "Compare Salesforce metadata between two orgs using SFDX.",
  "version": "0.0.8",
  "publisher": "shannu",
  "icon": "resources/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/Shannu9119/multi-org-diff-check"
  },
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:multiOrgComparator.start",
    "onView:multiOrgComparator.results",
    "onView:multiOrgComparator.assistant",
    "onCommand:multiOrgComparator.assistant.focus",
    "onCommand:multiOrgComparator.cleanRetrieval"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "multiOrgComparator.start",
        "title": "Multi-Org Comparator: Start Comparison"
      },
      {
        "command": "multiOrgComparator.openDiff",
        "title": "Open Diff"
      },
      { "command": "multiOrgComparator.showResults", "title": "Show Comparison Results", "icon": "$(list-unordered)" },
      { "command": "multiOrgComparator.refreshResults", "title": "Refresh Results", "icon": "$(refresh)" },
      { "command": "multiOrgComparator.filterModified", "title": "Toggle Modified", "icon": "$(diff)" },
      { "command": "multiOrgComparator.filterAdded", "title": "Toggle Added", "icon": "$(diff-added)" },
      { "command": "multiOrgComparator.filterDeleted", "title": "Toggle Deleted", "icon": "$(diff-removed)" },
      { "command": "multiOrgComparator.filterByExt", "title": "Filter by Extension", "icon": "$(filter)" },
      { "command": "multiOrgComparator.filterByName", "title": "Filter by Name", "icon": "$(search)" },
      { "command": "multiOrgComparator.clearFilters", "title": "Clear Filters", "icon": "$(clear-all)" }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "multiOrgComparator",
          "title": "Multi-Org Comparator",
          "icon": "resources/comparator.svg"
        }
      ]
    },
    "views": {
      "multiOrgComparator": [
        {
          "id": "multiOrgComparator.results",
          "name": "Comparison Results"
        },
        {
          "id": "multiOrgComparator.assistant",
          "name": "Assistant",
          "type": "webview"
        }
      ]
    },
    "menus": {
      "view/title": [
        { "command": "multiOrgComparator.refreshResults", "when": "view == multiOrgComparator.results", "group": "navigation@1" },
        { "command": "multiOrgComparator.filterByName", "when": "view == multiOrgComparator.results", "group": "navigation@2" },
        { "command": "multiOrgComparator.filterByExt", "when": "view == multiOrgComparator.results", "group": "navigation@3" },
        { "command": "multiOrgComparator.filterModified", "when": "view == multiOrgComparator.results", "group": "filter@1" },
        { "command": "multiOrgComparator.filterAdded", "when": "view == multiOrgComparator.results", "group": "filter@2" },
        { "command": "multiOrgComparator.filterDeleted", "when": "view == multiOrgComparator.results", "group": "filter@3" },
        { "command": "multiOrgComparator.clearFilters", "when": "view == multiOrgComparator.results", "group": "filter@9" }
      ]
    }
  },
  "scripts": {
    "compile": "tsc -p .",
    "watch": "tsc -p . -w",
    "test": "jest",
    "vscode:prepublish": "npm run compile",
    "package": "npm run compile && npx @vscode/vsce package"
  },
  "dependencies": {
    "diff": "^5.0.0",
    "fast-xml-parser": "^4.0.0"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^20.19.17",
  "@types/vscode": "1.80.0",
    "jest": "^29.0.0",
    "ts-jest": "^29.4.4",
    "typescript": "^5.0.0"
  }
}
