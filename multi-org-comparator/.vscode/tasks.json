{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Compile Extension",
      "type": "shell",
      "command": "npm run compile",
      "options": { "cwd": "${workspaceFolder}" },
      "group": "build",
      "problemMatcher": ["$tsc"],
      "presentation": { "reveal": "silent" }
    },
    {
      "label": "watch",
      "type": "shell",
      "command": "npm run watch",
      "options": { "cwd": "${workspaceFolder}" },
      "isBackground": true,
      "problemMatcher": "$tsc-watch",
      "presentation": { "reveal": "never", "panel": "dedicated" }
    },
    {
      "label": "Launch Extension",
      "type": "shell",
      "command": "echo Use F5 (Run Extension) to launch the Extension Development Host",
      "options": { "cwd": "${workspaceFolder}" }
    }
  ]
}
